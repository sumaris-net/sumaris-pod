<query type="select">
    <select type="text" alias="%suffix%" group="agg">
        <![CDATA[
        MIN(TRIM(CASE T.MONTH WHEN &month%suffix% THEN
                (CASE T.IS_ACTIVE
                  WHEN 0 THEN 'INA'
                  WHEN 2 THEN 'INE'
                  ELSE TO_CHAR(T.METIER_COUNT)
                END)
            ELSE
                CASE WHEN &month%suffix% < VRI.START_MONTH OR &month%suffix% > VRI.END_MONTH
                THEN 'NA' ELSE NULL END
            END)
        )
    ]]>
    </select>
</query>
