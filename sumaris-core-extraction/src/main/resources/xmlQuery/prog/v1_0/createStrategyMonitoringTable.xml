<queries name="extractionCreateStrategyMonitoringTable">

  <query type="create" temp="false" table="&amp;strategyMonitoringTableName" option="DISTINCT">

    <!-- PK -->
    <select alias="RECORD_TYPE" type="text">'SM'</select>
    <select alias="PROJECT" type="text">S.PROJECT</select>
    <select alias="PROGRAM_ID" type="number">S.PROGRAM_ID</select>
    <select alias="STRATEGY" type="text">S.LABEL</select>
    <select alias="STRATEGY_ID" type="text">S.ID</select>
    <select alias="LANDING_ID" type="number">L.ID</select>

    <!-- other fields -->
    <select alias="LANDING_LOCATION" type="text">LOC.LABEL</select>
    <select alias="LANDING_DATE_TIME" type="text">TO_CHAR(L.LANDING_DATE_TIME, 'YYYY-MM-DD HH24:MI')</select>

    <from alias="S">&amp;strategyTableName</from>
    <from join="true">INNER JOIN LANDING L ON L.PROGRAM_FK = S.PROGRAM_ID</from>
    <!-- landing strategy link -->
    <from join="true">INNER JOIN LANDING_MEASUREMENT LM ON LM.LANDING_FK = L.ID AND LM.PMFM_FK = &amp;strategyLabelPmfmId</from>
    <!-- landing strategy -->
    <from join="true">INNER JOIN STRATEGY S ON S.LABEL = LM.ALPHANUMERICAL_VALUE</from>
    <from join="true">INNER JOIN APPLIED_STRATEGY APS ON APS.STRATEGY_FK = S.ID</from>
    <from join="true">INNER JOIN APPLIED_PERIOD APP ON APP.APPLIED_STRATEGY_FK = APS.ID</from>

    <!-- landing location -->
    <from join="true">INNER JOIN LOCATION LOC on LOC.ID = L.LANDING_LOCATION_FK</from>

    <where operator="AND" group="startDateFilter"><![CDATA[L.LANDING_DATE_TIME >= &startDate]]></where>
    <where operator="AND" group="endDateFilter"><![CDATA[L.LANDING_DATE_TIME <= &endDate]]></where>

    <orderby direction="ASC">L.ID</orderby>

  </query>

</queries>