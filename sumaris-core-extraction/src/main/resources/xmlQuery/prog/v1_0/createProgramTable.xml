<queries name="extractionCreateProgramTable">

  <query type="create" temp="false" table="&amp;programTableName" option="DISTINCT">

    <!-- PK -->
    <select alias="RECORD_TYPE" type="text">'PR'</select>
    <select alias="PROJECT" type="text">P.LABEL</select>
    <select alias="PROGRAM_NAME" type="text">P.NAME</select>
    <select alias="PROGRAM_DESCRIPTION" type="text">P.DESCRIPTION</select>

    <select alias="GEAR_CLASSIFICATION" type="text">GC.LABEL</select>
    <select alias="TAXON_GROUP_TYPE" type="text">TGT.LABEL</select>

    <select alias="LOCATION_CLASSIFICATIONS" group="hsqldb" type="text">GROUP_CONCAT(LC.LABEL SEPARATOR ',')</select>
    <select alias="LOCATION_CLASSIFICATIONS" group="oracle" type="text">LISTAGG(LC.LABEL, ',') WITHIN GROUP (ORDER BY LC.LABEL)</select>

    <!-- hidden columns -->
    <select alias="PROGRAM_ID" type="hidden">P.ID</select>

    <from alias="P">PROGRAM</from>
    <from join="true">LEFT OUTER JOIN TAXON_GROUP_TYPE TGT ON TGT.ID = P.TAXON_GROUP_TYPE_FK</from>
    <from join="true">LEFT OUTER JOIN GEAR_CLASSIFICATION GC ON GC.ID = P.GEAR_CLASSIFICATION_FK</from>
    <from join="true">LEFT OUTER JOIN PROGRAM2LOCATION_CLASSIF P2LC ON P2LC.PROGRAM_FK = P.ID</from>
    <from join="true">LEFT OUTER JOIN LOCATION_CLASSIFICATION LC ON LC.ID = P2LC.LOCATION_CLASSIFICATION_FK</from>

    <where>1=1</where>
    <where operator="AND">
      EXISTS (SELECT 1 FROM &amp;strategyTableName S WHERE S.PROGRAM_ID=P.ID)
    </where>

    <where operator="AND" group="labelsFilter">
      <in field="P.LABEL"><![CDATA[&labels]]></in>
    </where>

    <groupby>
      P.LABEL, P.NAME, P.DESCRIPTION, GC.LABEL,
      TGT.LABEL, P.ID
    </groupby>

    <orderby direction="ASC">P.ID</orderby>

  </query>

</queries>