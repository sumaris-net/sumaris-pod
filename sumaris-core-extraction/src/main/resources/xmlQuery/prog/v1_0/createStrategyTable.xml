<queries name="extractionCreateStrategyTable">

  <query type="create" temp="false" table="&amp;strategyTableName" option="DISTINCT">

    <!-- PK -->
    <select alias="RECORD_TYPE" type="text">'ST'</select>
    <select alias="PROJECT" type="text">P.PROJECT</select>
    <select alias="PROGRAM_ID" type="number">P.PROGRAM_ID</select>
    <select alias="STRATEGY" type="text">S.LABEL</select>
    <select alias="STRATEGY_ID" type="text">S.ID</select>
    <select alias="STRATEGY_NAME" type="text">S.NAME</select>
    <select alias="STRATEGY_DESCRIPTION" type="text">S.DESCRIPTION</select>

    <from alias="P">&amp;programTable</from>
    <from join="true">INNER JOIN STRATEGY S ON S.PROGRAM_FK = P.PROGRAM_ID</from>

    <where operator="AND" group="idsFilter">
      <in field="S.ID"><![CDATA[&ids]]></in>
    </where>

    <!-- TODO Nolwenn: add filter on period -->
  </query>

</queries>