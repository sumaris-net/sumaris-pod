  <!-- Force FISHING_AREA re-creation (if table is empty) -->
  <changeSet author="benoit.lavenier@e-is.pro" id="1583765897916-9">
    <preConditions onFail="MARK_RAN">
      <and>
        <tableExists tableName="FISHING_AREA"/>
